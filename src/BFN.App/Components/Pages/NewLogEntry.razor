@page "/newlogentry/{ExerciseId:int}"
@using BFN.App.Services
@using BFN.Data.Models
@inject DataService dataService

@if (exercise == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1>@exercise.Name</h1>
    <EditForm Model="@newLogEntry" OnValidSubmit="HandleValidSubmit">
        <div>
            <label for="metricWeight">Weight:</label>
            <InputNumber @bind-Value="newLogEntry.MetricWeight" id="metricWeight" class="form-control" />
        </div>
        <div>
            <label for="reps">Reps:</label>
            <InputNumber @bind-Value="newLogEntry.Reps" id="reps" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" @onclick="ClearForm" class="btn btn-secondary">Clear</button>
    </EditForm>

    <button @onclick="GoToPreviousDay">←</button>
    <span>@DisplayDateText</span>
    <button @onclick="GoToNextDay">→</button>

    <h2>Logs for Selected Date</h2>
    @if (logs.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Weight</th>
                    <th>Reps</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in logs)
                {
                    <tr>
                        <td>@log.Date.ToShortDateString()</td>
                        <td>@log.MetricWeight</td>
                        <td>@log.Reps</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs for selected date.</p>
    }
}

@code {
    [Parameter]
    public int ExerciseId { get; set; }

    private Exercise exercise;
    private TrainingLog newLogEntry = new TrainingLog();
    private List<TrainingLog> logs = new List<TrainingLog>();
    private DateTime selectedDate = DateTime.Today;

    private string DisplayDateText => selectedDate.Date switch
    {
        var date when date == DateTime.Today => "Today",
        var date when date == DateTime.Today.AddDays(-1) => "Yesterday",
        var date when date == DateTime.Today.AddDays(1) => "Tomorrow",
        _ => selectedDate.ToString("dddd, MMM dd"),
    };

    protected override async Task OnInitializedAsync()
    {
        exercise = await dataService.db.GetAsync<Exercise>(ExerciseId);
        await LoadLogsForSelectedDate();
    }

    private async Task HandleValidSubmit()
    {
        newLogEntry.ExerciseId = ExerciseId;
        newLogEntry.Date = selectedDate;

        await dataService.db.InsertAsync(newLogEntry);

        newLogEntry = new TrainingLog();
        await LoadLogsForSelectedDate();
    }

    private void ClearForm()
    {
        newLogEntry = new TrainingLog();
        StateHasChanged();
    }

    private async Task GoToPreviousDay()
    {
        selectedDate = selectedDate.AddDays(-1);
        await LoadLogsForSelectedDate();
    }

    private async Task GoToNextDay()
    {
        selectedDate = selectedDate.AddDays(1);
        await LoadLogsForSelectedDate();
    }

    private async Task LoadLogsForSelectedDate()
    {
        logs = await dataService.GetLogs(ExerciseId, selectedDate);
    }
}
