@page "/exercises/{CategoryId:int}"
@using BFN.App.Services
@using BFN.Data.Models
@inject DataService dataService

@if (exercises == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container mt-4">
        <div class="row">
            @foreach (var exercise in exercises)
            {
                <div class="col-md-4 mb-3">
                    <NavLink class="btn btn-outline-primary w-100" href="@("/traininglog/" + exercise.Id)">
                        @exercise.Name
                    </NavLink>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public int CategoryId { get; set; }

    private IEnumerable<Exercise> exercises;

    protected override async Task OnInitializedAsync()
    {
        exercises = await dataService.db.Table<Exercise>().Where(e => e.CategoryId == CategoryId).ToListAsync();
    }
}
