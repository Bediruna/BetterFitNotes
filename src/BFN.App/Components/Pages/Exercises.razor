@page "/exercises/{CategoryId:int}"
@using BFN.Services
@using BFN.Data.Models
@inject DataService dataService

@if (exercises == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @if (category != null)
    {
        <h2 class="text-center">Exercises in @category.Name</h2>
    }
    else
    {
        <h2 class="text-center">Exercises</h2>
    }
    <div class="container mt-4">
        <div class="row">
            @foreach (var exercise in exercises)
            {
                <div class="col-md-4 mb-3">
                    <NavLink class="btn btn-outline-primary w-100" href="@("/traininglog/" + exercise.Id)">
                        @exercise.Name
                    </NavLink>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public int CategoryId { get; set; }
    private Category category;

    private IEnumerable<Exercise> exercises;

    protected override async Task OnInitializedAsync()
    {
        category = await dataService.db.Table<Category>().FirstOrDefaultAsync(c => c.Id == CategoryId);
        exercises = await dataService.db.Table<Exercise>().Where(e => e.CategoryId == CategoryId).ToListAsync();
    }

}
