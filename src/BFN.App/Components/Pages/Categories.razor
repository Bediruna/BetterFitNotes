@page "/categories"
@using BFN.App.Services
@using BFN.Data.Models
@inject DataService dataService

@if (categories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h2 class="text-center">Select Category for New Exercise</h2>
    <div class="container mt-4">
        <div class="row">
            @foreach (var category in categories)
            {
                <div class="col-md-4 mb-3">
                    <NavLink class="btn btn-outline-primary w-100" href="@("/exercises/" + category.Id)">
                        @category.Name
                    </NavLink>
                </div>
            }
        </div>
    </div>
}

@code {
    private IEnumerable<Category> categories;

    protected override async Task OnInitializedAsync()
    {
        categories = await dataService.db.Table<Category>().ToListAsync();
    }
}
